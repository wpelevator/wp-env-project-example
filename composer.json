{
	"$schema": "https://raw.githubusercontent.com/composer/composer/refs/heads/2.2/res/composer-schema.json",
	"name": "wpelevator/wp-env-example",
	"type": "project",
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org",
			"only": [
				"wpackagist-plugin/*",
				"wpackagist-theme/*"
			]
		},
		{
			"type": "path",
			"url": "wp-content/plugins/my-plugin",
			"options": {
				"reference": "none"
			}
		},
		{
			"type": "path",
			"url": "wp-content/themes/my-theme",
			"options": {
				"reference": "none"
			}
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"vendor-dir": "wp-content/vendor",
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"roots/wordpress-core-installer": true,
			"composer/installers": true
		}
	},
	"extra": {
		"wordpress-install-dir": "wordpress",
		"installer-paths": {
			"wp-content/plugins/{$name}": [
				"type:wordpress-plugin"
			],
			"wp-content/themes/{$name}": [
				"type:wordpress-theme"
			]
		}
	},
	"require-dev": {
		"wp-phpunit/wp-phpunit": "^6.7",
		"wpackagist-plugin/query-monitor": "^3.17",
		"yoast/phpunit-polyfills": "^3.0"
	},
	"require": {
		"roots/wordpress-core-installer": "^1.0",
		"roots/wordpress-no-content": "^6.7",
		"wpackagist-theme/twentytwentyfive": "^1.0",
		"my-vendor/my-plugin": "*",
		"my-vendor/my-theme": "*"
	},
	"scripts": {
		"test": [
			"phpunit --configuration=tests/phpunit.xml.dist"
		]
	}
}
